<Application x:Class="Assignment6.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="Score Board">
            <Setter Property="TextElement.FontFamily" 
           Value="Fonts/#Score Board" />
            <Setter Property="TextElement.Foreground" Value="Yellow"/>
            <Setter Property="TextElement.FontSize" Value="48"></Setter>
            <Setter Property="TextElement.FontWeight" Value="ExtraBold"></Setter>
        </Style>
        <Style x:Key="Label Text">
            <Setter Property="TextElement.FontFamily" Value="Verdana"/>
            <Setter Property="TextElement.FontSize" Value="36"/>
        </Style>
    </Application.Resources>
</Application>
